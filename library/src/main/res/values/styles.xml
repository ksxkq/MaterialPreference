<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PreferenceBg">
        <item name="android:id">@id/root</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:layout_height">@dimen/material_preference_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/bg_material_preference</item>
    </style>

    <style name="PreferenceCategoryTitleTv">
        <item name="android:id">@id/title_tv</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textSize">@dimen/material_preference_category_title_size</item>
        <item name="android:textColor">@color/material_primary_color</item>
    </style>

    <style name="PreferenceTitleTv">
        <item name="android:id">@id/title_tv</item>
        <item name="android:textSize">@dimen/material_preference_title_size</item>
        <item name="android:textColor">@color/material_preference_title</item>
    </style>

    <style name="PreferenceSummaryTv">
        <item name="android:id">@id/summary_tv</item>
        <item name="android:textColor">@color/material_preference_summary</item>
        <item name="android:layout_marginRight">4dp</item>
    </style>

</resources>